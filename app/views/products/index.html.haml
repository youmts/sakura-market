= content_for(:html_title) { '買い物' }

.row
  - @products.each do |product|
    .col-sm-4.p-2
      .shadow-sm.rounded.bg-white
        .row
          - if product.image_url.presence
            = link_to image_tag(product.image_url(:thumb)), product, class: "mx-auto"
          - else
            %p イメージなし
        .row
          %p.mx-auto
            = product.name
